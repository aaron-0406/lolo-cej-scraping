# Copy this file to .env and fill in the values for your local environment.

# --- Server ---
PORT=4000
NODE_ENV=development
LOG_LEVEL=info

# --- Database (shared MySQL with lolo-backend) ---
DB_USER=root
DB_PASSWORD=aaron
DB_HOST=localhost
DB_PORT=3306
DB_NAME=db_lolo

# --- Redis (BullMQ job queues) ---
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# --- AWS S3 (file storage) ---
AWS_BUCKET_NAME=archivosstorage
AWS_BUCKET_REGION=us-west-2
AWS_PUBLIC_KEY=
AWS_SECRET_KEY=
AWS_CHB_PATH=CHB/

# --- 2Captcha (CAPTCHA solving service) ---
CAPTCHA_API_KEY=

# --- CEJ Website ---
CEJ_BASE_URL=https://cej.pj.gob.pe/cej/forms/busquedaform.html

# --- Worker Configuration ---
BROWSER_POOL_SIZE=3
MAX_PAGES_PER_BROWSER=20
WORKER_CONCURRENCY=3
PAGE_TIMEOUT_MS=30000
NAVIGATION_TIMEOUT_MS=15000

# --- Rate Limiting ---
RATE_LIMIT_MAX=10
RATE_LIMIT_DURATION_MS=60000

# --- Scheduler ---
SCHEDULER_INTERVAL_MINUTES=10

# --- Service Authentication (shared secret with lolo-backend) ---
SERVICE_SECRET=change-this-to-a-strong-secret
